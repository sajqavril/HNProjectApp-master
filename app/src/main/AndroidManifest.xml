<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="as.hn.com.hnprojectapp"><!--之后所有的activity等组件之前的.表示的位置-->
    <!-- 获取网络状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 获取设备信息 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 获取MAC地址-->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 允许程序录制音频 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <!-- 网络通信-->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!-- 读写sdcard，storage等等 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- Optional -->
    <!-- 获取logcat日志 -->
    <uses-permission
        android:name="android.permission.READ_LOGS"
        tools:ignore="ProtectedPermissions" />

    <application
        android:name=".CrashApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HNDesign"
        android:usesCleartextTraffic="true"> <!--允许使用http协议等-->
        <!--name追加到manifest定义的package中去-->
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"> <!--用于定义activity是属于哪个类的-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--android:name指定实现这个activity的类，".Appplan"之前的.对应manifest里面package-->
        <activity
            android:name=".Appplan"
            android:label="@string/title_activity_appplan"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddPercentage"
            android:label="@string/title_activity_add_percentage"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PlanListActivity"
            android:label="@string/title_activity_plan_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PlanVIewActivity"
            android:label="@string/title_activity_plan_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".PwdEditActivity" />
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register"
            android:theme="@style/Theme.HNDesign" />
        <activity
            android:name=".Teams.TeamListActivity"
            android:label="@string/title_activity_team_list"
            android:theme="@style/Theme.HNDesign"></activity>
        <activity
            android:name=".Teams.ChatActivity"
            android:label="即时聊天室"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".ChatListActivity">

        </activity>

        <activity android:name=".ShareFilePagerActivity">


        </activity>

        <activity android:name=".SearchFileActivity"/>

        <activity android:name=".AddChatActivity"/>



        <!-- Required -->
        <meta-data
            android:name="PGYER_APPID"
            android:value="3462c64c8839f1f4f2120710b910f679"></meta-data>
    </application>
</manifest>
